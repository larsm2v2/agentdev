# Fast development Dockerfile
FROM python:3.14-rc-alpine3.20 AS development

# Install system dependencies (this layer rarely changes)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    netcat-traditional \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies first (this layer changes less often)
COPY requirements.docker.txt requirements.txt
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install development tools for faster iteration
RUN pip install --no-cache-dir uvicorn[standard] watchdog

# Create app user
RUN useradd --create-home --shell /bin/bash app
RUN mkdir -p logs data email_cache
RUN chown -R app:app /app

# Copy entrypoint
COPY docker-entrypoint.sh ./
RUN chmod +x docker-entrypoint.sh

# Note: Source code is mounted as volumes in development
# so we don't copy it here - enables live reloading

USER app

# Development entrypoint with auto-reload
CMD ["uvicorn", "src.core.enhanced_email_librarian_server:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app/src", "--reload-dir", "/app/frontend"]
