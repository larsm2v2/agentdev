# Enhanced Email Librarian Configuration
# Copy this to .env and configure your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/email_librarian
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=email_librarian
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here

# LangFuse Observability
LANGFUSE_PUBLIC_KEY=pk-lf-your_public_key_here
LANGFUSE_SECRET_KEY=sk-lf-your_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# n8n Workflow Automation
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# OpenAI for embeddings and LLM
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=config/credentials.json
GMAIL_TOKEN_PATH=config/token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.modify

# CrewAI Configuration
CREWAI_TELEMETRY=false
CREW_MAX_EXECUTION_TIME=3600
CREW_VERBOSE=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=false
LOG_LEVEL=INFO

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379/0

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Email Processing Configuration
EMAIL_BATCH_SIZE=50
EMAIL_PROCESSING_TIMEOUT=300
MAX_CONCURRENT_JOBS=5

# Vector Search Configuration
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=100
